<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/vector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StepCountActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/main_sc"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="30dp"
        android:src="@drawable/back" />
    <TextView
       android:layout_marginLeft="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/cabin"
        android:text="Step"
        android:textColor="#fff"
        android:textSize="30sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_step"
        android:layout_width="21dp"
        android:layout_height="25dp"
        android:backgroundTint="#FFEB3B"
        android:text="Start!"
        android:visibility="gone" />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:paddingLeft="30dp"
        android:background="@drawable/form_step"
        android:id="@+id/step_area"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="300dp">
        <TextView
            android:textSize="24sp"
            android:fontFamily="@font/cabin"
            android:textColor="#2D956F"
            android:paddingTop="10dp"
            android:text="Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/walk"
                android:layout_width="80dp"
                android:layout_height="110dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/step_stop"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_stop"
                android:text="Stop"
                android:textColor="#fff"
                android:layout_width="100dp"
                android:layout_height="45dp"/>
        </LinearLayout>
        <TextView
            android:textColor="#2D956F"
            android:marginLeft="20dp"
            android:background="#F19F9F"
            android:id="@+id/step_counter"
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimamaduraiextrabold"
            android:text="0 step"
            android:paddingBottom="10dp"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="40dp"
            android:fontFamily="@font/cabin"
            android:textSize="32sp"
            android:textColor="#000"
            android:text="0,0km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/cabin"
            android:textSize="32sp"
            android:textColor="#000"
            android:text="0 kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>